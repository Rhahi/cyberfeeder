{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2017",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": false,
    "skipLibCheck": true,
    "types": ["firefox-webext-browser"],
    "lib": ["es2021", "DOM", "ES2021.String"],
    "declaration": false
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
