{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": false,
    "skipLibCheck": true,
    "types": ["firefox-webext-browser"],
    "lib": ["es2018", "DOM", "ES2021.String"],
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
